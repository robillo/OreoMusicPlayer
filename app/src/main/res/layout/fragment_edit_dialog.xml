<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:background="@color/app1">

            <ImageView
                android:layout_width="36sp"
                android:layout_height="36sp"
                android:src="@drawable/baseline_edit_black_48"
                android:tint="@color/white"
                tools:ignore="ContentDescription"
                android:layout_gravity="center_vertical"
                android:padding="4sp"/>

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="15sp"
                android:text="Edit Playlist Name:"
                android:textColor="@color/white"
                android:gravity="start|center_vertical"
                tools:ignore="HardcodedText,RtlHardcoded"
                android:id="@+id/header"
                android:paddingLeft="10sp"
                android:paddingRight="20sp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="@color/app1"
            tools:ignore="ContentDescription,SmallSp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:hint="Night Music"
            android:textColor="@color/colorTextOne"
            android:padding="15sp"
            android:layout_gravity="center_horizontal"
            android:inputType="textAutoComplete"
            tools:ignore="HardcodedText"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="15sp"
            android:id="@+id/edit_text"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="@color/colorTextThree"
            tools:ignore="ContentDescription,SmallSp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="15sp"
                android:text="Cancel"
                android:textColor="@color/colorTextOne"
                android:padding="8sp"
                android:gravity="center"
                tools:ignore="HardcodedText"
                android:id="@+id/cancel"
                android:background="@drawable/button_impression"/>

            <ImageView
                android:layout_width="2sp"
                android:layout_height="match_parent"
                android:background="@color/colorTextThree"
                tools:ignore="ContentDescription,SmallSp" />

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="15sp"
                android:text="Done"
                android:textColor="@color/colorTextOne"
                android:padding="8sp"
                android:gravity="center"
                tools:ignore="HardcodedText"
                android:id="@+id/done"
                android:background="@drawable/button_impression"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>