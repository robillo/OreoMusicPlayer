<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/bottom_sheet"
    app:behavior_hideable="false"
    app:behavior_peekHeight="50sp"
    android:background="@color/white"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/black"
        android:gravity="start|center_vertical"
        android:id="@+id/layout_lift_burrow_playlists">

        <ImageView
            android:id="@+id/up_down_fragment_playlist"
            android:layout_width="50sp"
            android:layout_height="match_parent"
            android:padding="5sp"
            android:src="@drawable/baseline_keyboard_arrow_up_white_48"
            android:contentDescription="@string/up_down_playlist_fragment" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:text="All Songs"
            android:textSize="20sp"
            android:textColor="@color/colorBackground"
            android:gravity="start|center_vertical"
            tools:ignore="HardcodedText,RtlHardcoded"
            android:id="@+id/selected_playlist"
            android:scrollHorizontally="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:ellipsize="marquee"/>

    </LinearLayout>

    <ImageView
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:background="@color/colorBackground"
        tools:ignore="ContentDescription,SmallSp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40sp"
            android:layout_height="35sp"
            android:padding="5sp"
            android:src="@drawable/baseline_edit_black_48"
            android:contentDescription="@string/edit"
            android:tint="@color/colorTextOne"/>

        <ImageView
            android:layout_width="2sp"
            android:layout_height="match_parent"
            android:background="@color/colorBackground"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="EDM Playlist"
            android:textSize="20sp"
            android:padding="8sp"
            android:textColor="@color/colorTextOne"
            android:gravity="center"
            tools:ignore="HardcodedText"
            android:scrollHorizontally="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:ellipsize="marquee"/>

        <ImageView
            android:layout_width="2sp"
            android:layout_height="match_parent"
            android:background="@color/colorBackground"
            tools:ignore="ContentDescription" />

        <ImageView
            android:layout_width="40sp"
            android:layout_height="35sp"
            android:padding="5sp"
            android:src="@drawable/baseline_delete_forever_black_48"
            android:contentDescription="@string/edit"
            android:tint="@color/red2"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:background="@color/colorBackground"
        tools:ignore="ContentDescription,SmallSp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40sp"
            android:layout_height="35sp"
            android:padding="5sp"
            android:src="@drawable/baseline_edit_black_48"
            android:contentDescription="@string/edit"
            android:tint="@color/colorTextOne"/>

        <ImageView
            android:layout_width="2sp"
            android:layout_height="match_parent"
            android:background="@color/colorBackground"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Most Played"
            android:textSize="20sp"
            android:padding="8sp"
            android:textColor="@color/colorTextOne"
            android:gravity="center"
            tools:ignore="HardcodedText"
            android:scrollHorizontally="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:ellipsize="marquee"/>

        <ImageView
            android:layout_width="2sp"
            android:layout_height="match_parent"
            android:background="@color/colorBackground"
            tools:ignore="ContentDescription" />

        <ImageView
            android:layout_width="40sp"
            android:layout_height="35sp"
            android:padding="5sp"
            android:src="@drawable/baseline_delete_forever_black_48"
            android:contentDescription="@string/edit"
            android:tint="@color/red2"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:background="@color/colorBackground"
        tools:ignore="ContentDescription,SmallSp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40sp"
            android:layout_height="35sp"
            android:padding="5sp"
            android:src="@drawable/baseline_edit_black_48"
            android:contentDescription="@string/edit"
            android:tint="@color/colorTextOne"/>

        <ImageView
            android:layout_width="2sp"
            android:layout_height="match_parent"
            android:background="@color/colorBackground"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Recently Added"
            android:textSize="20sp"
            android:padding="8sp"
            android:textColor="@color/colorTextOne"
            android:gravity="center"
            tools:ignore="HardcodedText"
            android:scrollHorizontally="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:ellipsize="marquee"/>

        <ImageView
            android:layout_width="2sp"
            android:layout_height="match_parent"
            android:background="@color/colorBackground"
            tools:ignore="ContentDescription" />

        <ImageView
            android:layout_width="40sp"
            android:layout_height="35sp"
            android:padding="5sp"
            android:src="@drawable/baseline_delete_forever_black_48"
            android:contentDescription="@string/edit"
            android:tint="@color/red2"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:background="@color/colorBackground"
        tools:ignore="ContentDescription,SmallSp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40sp"
            android:layout_height="35sp"
            android:padding="5sp"
            android:src="@drawable/baseline_edit_black_48"
            android:contentDescription="@string/edit"
            android:tint="@color/colorTextOne"/>

        <ImageView
            android:layout_width="2sp"
            android:layout_height="match_parent"
            android:background="@color/colorBackground"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="My Favourites"
            android:textSize="20sp"
            android:padding="8sp"
            android:textColor="@color/colorTextOne"
            android:gravity="center"
            tools:ignore="HardcodedText"
            android:scrollHorizontally="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:ellipsize="marquee"/>

        <ImageView
            android:layout_width="2sp"
            android:layout_height="match_parent"
            android:background="@color/colorBackground"
            tools:ignore="ContentDescription" />

        <ImageView
            android:layout_width="40sp"
            android:layout_height="35sp"
            android:padding="5sp"
            android:src="@drawable/baseline_delete_forever_black_48"
            android:contentDescription="@string/edit"
            android:tint="@color/red2"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:background="@color/colorBackground"
        tools:ignore="ContentDescription,SmallSp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:id="@+id/create_new_playlist"
        android:text="@string/create_new"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:backgroundTint="@color/green_primary"/>

</LinearLayout>