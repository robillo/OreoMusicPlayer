<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/bottom_sheet"
    app:behavior_hideable="false"
    app:behavior_peekHeight="50sp"
    android:background="@color/white"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/black"
        android:gravity="start|center_vertical"
        android:id="@+id/layout_lift_burrow_playlists">

        <ImageView
            android:id="@+id/up_down_fragment_playlist"
            android:layout_width="50sp"
            android:layout_height="match_parent"
            android:padding="5sp"
            android:src="@drawable/baseline_keyboard_arrow_up_white_48"
            android:contentDescription="@string/up_down_playlist_fragment" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:text="All Songs"
            android:textSize="20sp"
            android:textColor="@color/colorTextFive"
            android:gravity="start|center_vertical"
            tools:ignore="HardcodedText,RtlHardcoded"
            android:id="@+id/selected_playlist"
            android:scrollHorizontally="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:ellipsize="marquee"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recently Played"
        android:textSize="18sp"
        android:padding="8sp"
        android:textColor="@color/colorTextOne"
        android:gravity="start|center_vertical"
        tools:ignore="HardcodedText"
        android:scrollHorizontally="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:ellipsize="marquee"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:background="@color/colorTextFour"
        tools:ignore="ContentDescription,SmallSp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="All Songs"
        android:textSize="18sp"
        android:padding="8sp"
        android:textColor="@color/colorTextOne"
        android:gravity="start|center_vertical"
        tools:ignore="HardcodedText"
        android:scrollHorizontally="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:ellipsize="marquee"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:background="@color/colorTextFour"
        tools:ignore="ContentDescription,SmallSp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Most Played"
        android:textSize="18sp"
        android:padding="8sp"
        android:textColor="@color/colorTextOne"
        android:gravity="start|center_vertical"
        tools:ignore="HardcodedText"
        android:scrollHorizontally="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:ellipsize="marquee"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:background="@color/colorTextFour"
        tools:ignore="ContentDescription,SmallSp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EDM"
        android:textSize="18sp"
        android:padding="8sp"
        android:textColor="@color/colorTextOne"
        android:gravity="start|center_vertical"
        tools:ignore="HardcodedText"
        android:scrollHorizontally="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:ellipsize="marquee"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:background="@color/colorTextFour"
        tools:ignore="ContentDescription,SmallSp" />

</LinearLayout>