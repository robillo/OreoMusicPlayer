<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="8sp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="105sp"
        android:layout_height="105sp"
        app:cardCornerRadius="50sp"
        app:cardElevation="0sp"
        tools:cardBackgroundColor="@color/black">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:background="@drawable/gradient"
            android:contentDescription="@string/gradient_colors"
            android:id="@+id/gradient_image_view"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5sp"
        android:layout_margin="5sp"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="VIOLET - LIGHT"
            android:textSize="12sp"
            android:gravity="center"
            android:id="@+id/color_name"
            android:padding="5sp"/>

    </android.support.v7.widget.CardView>

</LinearLayout>