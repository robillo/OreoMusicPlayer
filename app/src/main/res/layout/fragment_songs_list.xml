<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".views.activities.main.song_list_frag.SongsListFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:fastScrollEnabled="true"
            app:fastScrollHorizontalThumbDrawable="@drawable/thumb_drawable"
            app:fastScrollHorizontalTrackDrawable="@drawable/line_drawable"
            app:fastScrollVerticalThumbDrawable="@drawable/thumb_drawable"
            app:fastScrollVerticalTrackDrawable="@drawable/line_drawable"
            android:id="@+id/recycler_view"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hide_or_show_upper"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/transparency_black"
                tools:ignore="ContentDescription,SmallSp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:orientation="horizontal"
                tools:background="@color/black">

                <ImageButton
                    android:id="@+id/sort_options"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:tint="@color/white"
                    android:src="@drawable/ic_sort_black_24dp"
                    android:contentDescription="@string/app_menu_options" />

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/string_player_name"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:gravity="center"/>

                <ImageButton
                    android:id="@+id/app_menu_options"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:tint="@color/white"
                    android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
                    android:contentDescription="@string/app_menu_options" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:background="@color/black"
                tools:ignore="ContentDescription,SmallSp" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:id="@+id/bottom_controller"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2sp"
                    android:background="@color/black"
                    tools:ignore="ContentDescription,SmallSp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    tools:ignore="RtlHardcoded"
                    android:id="@+id/launch_play_frag_one">

                    <View
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:visibility="invisible"
                        tools:ignore="NestedWeights" />

                    <ImageButton
                        android:id="@+id/play_previous_song"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:contentDescription="@string/play_previous_song"
                        android:src="@drawable/ic_skip_previous_black_24dp" />

                    <ImageButton
                        android:id="@+id/play_pause_song"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:contentDescription="@string/play_song"
                        android:src="@drawable/ic_play_arrow_black_24dp" />

                    <ImageButton
                        android:id="@+id/play_next_song"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:contentDescription="@string/play_next_song"
                        android:src="@drawable/ic_skip_next_black_24dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:orientation="horizontal"
                    tools:background="@color/black"
                    android:id="@+id/launch_play_frag_two">

                    <FrameLayout
                        android:layout_width="120sp"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/current_song_duration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="20sp"
                            android:layout_marginRight="10sp"
                            android:layout_marginBottom="5sp"
                            android:gravity="center"
                            android:maxLines="1"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,MissingPrefix,RtlHardcoded,RtlSymmetry"
                            tools:text="( 3:40 )" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        tools:ignore="RtlHardcoded,RtlSymmetry">

                        <ProgressBar
                            android:id="@+id/progress_current_song"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="100"
                            android:progress="50"
                            android:progressBackgroundTint="@android:color/darker_gray"
                            android:progressTint="@color/white"
                            android:visibility="invisible"/>

                        <TextView
                            android:id="@+id/current_song_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            tools:ignore="HardcodedText,MissingPrefix,RtlHardcoded,RtlSymmetry"
                            tools:text="I'll be your reason"
                            android:scrollHorizontally="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:singleLine="true"
                            android:ellipsize="marquee"
                            android:layout_marginBottom="5sp"/>

                        <TextView
                            android:id="@+id/current_song_artist"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,MissingPrefix,RtlHardcoded,RtlSymmetry"
                            tools:text="Illenium"
                            android:singleLine="true"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/current_song_album_art"
                android:layout_width="90sp"
                android:layout_height="90sp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="25sp"
                android:layout_marginLeft="20sp"
                android:src="@color/white"
                app:civ_border_color="@color/white"
                app:civ_border_width="5sp"
                tools:ignore="RtlHardcoded"/>

        </FrameLayout>

    </FrameLayout>

</android.support.design.widget.CoordinatorLayout>