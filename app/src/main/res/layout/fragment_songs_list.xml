<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".views.activities.main.song_list_frag.SongsListFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rv_or_no_songs">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="?android:attr/actionBarSize"
                android:id="@+id/error_layout"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:background="@drawable/sad_dog"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No Songs In This Playlist"
                    android:textSize="24sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="5sp"
                    android:textColor="@color/brown_error"
                    android:gravity="center"
                    tools:ignore="HardcodedText"
                    android:id="@+id/oops"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Please Add Some Songs To This Playlist First"
                    android:textSize="19sp"
                    android:textColor="@color/brown_error_light"
                    android:gravity="center"
                    tools:ignore="HardcodedText"
                    android:id="@+id/add_some_songs"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="10sp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/transparency_black"
                    android:text="@string/retry"
                    android:textSize="20sp"
                    android:layout_margin="10sp"
                    android:paddingLeft="20sp"
                    android:paddingRight="20sp"
                    android:paddingTop="10sp"
                    android:paddingBottom="10sp"
                    android:background="@drawable/bg_settings"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/rescan_device"/>

            </LinearLayout>

            <com.simplecityapps.recyclerview_fastscroll.views.FastScrollRecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:fastScrollPopupTextSize="18sp"
                app:fastScrollPopupBackgroundSize="40sp"
                app:fastScrollTrackColor="#1f000000"
                android:paddingBottom="50sp"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hide_or_show_upper"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/colorTextOne"
                tools:ignore="ContentDescription,SmallSp"
                android:id="@+id/top_line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:orientation="horizontal"
                tools:background="@color/black">

                <ImageButton
                    android:id="@+id/sort_options"
                    android:layout_width="?android:attr/actionBarSize"
                    android:layout_height="match_parent"
                    android:background="?android:attr/selectableItemBackground"
                    android:tint="@color/white"
                    android:src="@drawable/ic_sort_black_24dp"
                    android:contentDescription="@string/app_menu_options" />

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/string_player_name"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:id="@+id/app_name"/>

                <ImageButton
                    android:id="@+id/app_menu_options"
                    android:layout_width="?android:attr/actionBarSize"
                    android:layout_height="match_parent"
                    android:background="?android:attr/selectableItemBackground"
                    android:tint="@color/white"
                    android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
                    android:contentDescription="@string/app_menu_options" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/readBlack"
                tools:ignore="ContentDescription,SmallSp" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:id="@+id/bottom_controller"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_marginBottom="50sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="@color/readBlack"
                    tools:ignore="ContentDescription,SmallSp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    tools:ignore="RtlHardcoded"
                    android:id="@+id/launch_play_frag_one">

                    <View
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:visibility="invisible"
                        tools:ignore="NestedWeights" />

                    <ImageButton
                        android:id="@+id/play_previous_song"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackground"
                        android:contentDescription="@string/play_previous_song"
                        android:src="@drawable/ic_skip_previous_black_24dp" />

                    <ImageButton
                        android:id="@+id/play_pause_song"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackground"
                        android:contentDescription="@string/play_song"
                        android:src="@drawable/ic_play_arrow_black_24dp" />

                    <ImageButton
                        android:id="@+id/play_next_song"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackground"
                        android:contentDescription="@string/play_next_song"
                        android:src="@drawable/ic_skip_next_black_24dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:orientation="horizontal"
                    tools:background="@color/black"
                    android:id="@+id/launch_play_frag_two">

                    <FrameLayout
                        android:layout_width="120sp"
                        android:layout_height="match_parent">

                        <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/current_song_album_art"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom"
                            android:src="@color/white"
                            tools:ignore="ContentDescription,RtlHardcoded"
                            tools:src="@drawable/square_solid"/>


                        <TextView
                            android:id="@+id/current_song_duration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="5sp"
                            android:gravity="center"
                            android:maxLines="1"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,MissingPrefix,RtlHardcoded,RtlSymmetry"
                            tools:text="( 3:40 )" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        tools:ignore="RtlHardcoded,RtlSymmetry">

                        <TextView
                            android:id="@+id/current_song_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            tools:ignore="HardcodedText,MissingPrefix,RtlHardcoded,RtlSymmetry"
                            tools:text="I'll be your reason"
                            android:scrollHorizontally="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:singleLine="true"
                            android:ellipsize="marquee"
                            android:layout_marginBottom="5sp"
                            android:gravity="end|center_vertical"
                            android:paddingRight="10sp"/>

                        <TextView
                            android:id="@+id/current_song_artist"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,MissingPrefix,RtlHardcoded,RtlSymmetry"
                            tools:text="Illenium"
                            android:singleLine="true"
                            android:gravity="end|center_vertical"
                            android:paddingRight="10sp"/>

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="@color/colorTextOne"
                    tools:ignore="ContentDescription,SmallSp"
                    android:id="@+id/bottom_line"/>

            </LinearLayout>

        </FrameLayout>

    </FrameLayout>

</android.support.design.widget.CoordinatorLayout>