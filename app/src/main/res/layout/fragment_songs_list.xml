<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".views.activities.main.song_list_frag.SongsListFragment">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:gravity="center">

            <TextView
                fontPath="fonts/Raleway-Regular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/robin_player"
                android:textColor="@color/colorTitle"
                android:textSize="30sp"
                tools:ignore="MissingPrefix,RtlHardcoded,RtlSymmetry" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recycler_view"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:orientation="vertical"
            android:layout_gravity="bottom">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:layout_marginTop="10sp"
                app:cardBackgroundColor="@color/colorPrimary"
                tools:ignore="RtlHardcoded">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="RtlHardcoded">

                    <View
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:visibility="invisible" />

                    <ImageButton
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:contentDescription="@string/play_previous_song"
                        android:src="@drawable/ic_skip_previous_black_24dp"
                        android:id="@+id/play_previous_song"/>

                    <ImageButton
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:contentDescription="@string/play_song"
                        android:src="@drawable/ic_play_arrow_black_24dp"
                        android:id="@+id/play_pause_song" />

                    <ImageButton
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:contentDescription="@string/play_next_song"
                        android:src="@drawable/ic_skip_next_black_24dp"
                        android:id="@+id/play_next_song" />

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/colorTitle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="120sp"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/current_song_duration"
                            fontPath="fonts/six.ttf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:gravity="center"
                            android:maxLines="1"
                            android:layout_marginLeft="20sp"
                            android:layout_marginRight="10sp"
                            android:paddingBottom="10sp"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,MissingPrefix,RtlHardcoded,RtlSymmetry"
                            tools:text="( 3:40 )" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        tools:ignore="RtlHardcoded,RtlSymmetry">

                        <ProgressBar
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:progress="50"
                            android:max="100"
                            android:progressTint="@color/white"
                            android:id="@+id/progress_current_song"/>

                        <TextView
                            android:maxLines="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            fontPath="fonts/Raleway-Regular.ttf"
                            tools:text="I'll be your reason"
                            android:id="@+id/current_song_title"
                            tools:ignore="HardcodedText,MissingPrefix,RtlHardcoded,RtlSymmetry" />

                        <TextView
                            android:maxLines="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            fontPath="fonts/Raleway-Regular.ttf"
                            tools:text="Illenium"
                            android:id="@+id/current_song_artist"
                            tools:ignore="HardcodedText,MissingPrefix,RtlHardcoded,RtlSymmetry" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/current_song_album_art"
            android:layout_marginLeft="30sp"
            android:layout_marginBottom="30sp"
            android:layout_gravity="bottom"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:src="@color/white"
            app:civ_border_width="3sp"
            app:civ_border_color="#FF000000"
            tools:ignore="RtlHardcoded" />

    </FrameLayout>

</android.support.design.widget.CoordinatorLayout>