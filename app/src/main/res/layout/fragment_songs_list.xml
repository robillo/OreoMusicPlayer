<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".views.activities.main.song_list_frag.SongsListFragment">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:gravity="center">

            <TextView
                fontPath="fonts/Raleway-Regular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/robin_player"
                android:textColor="@color/colorTitle"
                android:textSize="30sp"
                tools:ignore="MissingPrefix,RtlHardcoded,RtlSymmetry" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recycler_view"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="10sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:visibility="invisible"
                        tools:ignore="RtlHardcoded">

                        <View
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:visibility="invisible"
                            tools:ignore="NestedWeights" />

                        <ImageButton
                            android:id="@+id/play_previous_song"
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:contentDescription="@string/play_previous_song"
                            android:src="@drawable/ic_skip_previous_black_24dp" />

                        <ImageButton
                            android:id="@+id/play_pause_song"
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:contentDescription="@string/play_song"
                            android:src="@drawable/ic_play_arrow_black_24dp" />

                        <ImageButton
                            android:id="@+id/play_next_song"
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:contentDescription="@string/play_next_song"
                            android:src="@drawable/ic_skip_next_black_24dp" />

                    </LinearLayout>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="70sp"
                        app:cardBackgroundColor="@color/colorPrimary"
                        app:cardCornerRadius="5sp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <FrameLayout
                                android:layout_width="120sp"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/current_song_duration"
                                    fontPath="fonts/six.ttf"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    android:layout_marginLeft="20sp"
                                    android:layout_marginRight="10sp"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:textColor="@color/readBlack"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    tools:ignore="HardcodedText,MissingPrefix,RtlHardcoded,RtlSymmetry"
                                    tools:text="( 3:40 )" />

                            </FrameLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                tools:ignore="RtlHardcoded,RtlSymmetry">

                                <ProgressBar
                                    android:id="@+id/progress_current_song"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:max="100"
                                    android:progress="50"
                                    android:progressBackgroundTint="@color/colorTextOne"
                                    android:progressTint="@color/black" />

                                <TextView
                                    android:id="@+id/current_song_title"
                                    fontPath="fonts/Raleway-Regular.ttf"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1"
                                    android:textColor="@color/readBlack"
                                    android:textSize="20sp"
                                    tools:ignore="HardcodedText,MissingPrefix,RtlHardcoded,RtlSymmetry"
                                    tools:text="I'll be your reason" />

                                <TextView
                                    android:id="@+id/current_song_artist"
                                    fontPath="fonts/Raleway-Regular.ttf"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1"
                                    android:textColor="@color/readBlack"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    tools:ignore="HardcodedText,MissingPrefix,RtlHardcoded,RtlSymmetry"
                                    tools:text="Illenium" />

                            </LinearLayout>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/current_song_album_art"
                    android:layout_width="90sp"
                    android:layout_height="90sp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="25sp"
                    android:layout_marginLeft="20sp"
                    android:src="@color/white"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="3sp"
                    tools:ignore="RtlHardcoded"/>

            </FrameLayout>

    </FrameLayout>

</android.support.design.widget.CoordinatorLayout>